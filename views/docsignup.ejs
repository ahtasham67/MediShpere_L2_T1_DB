    <!-- Add this script to initialize the date picker -->
    <script>
       $(document).ready(function () {
    // Initialize date picker with placeholder text
    $("input[name='day']").datepicker({
        dateFormat: "yy-mm-dd", // Set the desired date format
        changeMonth: true,
        changeYear: true,
        yearRange: "1900:+0", // Set the range of selectable years
        showButtonPanel: true // Show today and clear buttons
    });

    // Set placeholder text
    $("input[name='day']").attr("placeholder", "Date");

    // Populate start time and end time dropdowns
    var startTimeSelect = $("#starttime");
    var endTimeSelect = $("#endtime");

    // Generate start time options
    for (var hour = 8; hour <= 12; hour++) { // Loop for AM hours
        startTimeSelect.append($('<option>', {
            value: (hour < 10 ? '0' : '') + hour + ':00 AM',
            text: (hour < 10 ? '0' : '') + hour + ':00 AM'
        }));
        startTimeSelect.append($('<option>', {
            value: (hour < 10 ? '0' : '') + hour + ':30 AM',
            text: (hour < 10 ? '0' : '') + hour + ':30 AM'
        }));
    }

    for (var hour = 1; hour <= 3; hour++) { // Loop for PM hours
        startTimeSelect.append($('<option>', {
            value: '0' + hour + ':00 PM',
            text: '0' + hour + ':00 PM'
        }));
        startTimeSelect.append($('<option>', {
            value: '0' + hour + ':30 PM',
            text: '0' + hour + ':30 PM'
        }));
    }

    // Generate end time options
    for (var hour = 9; hour <= 13; hour++) { // Loop for AM hours
        endTimeSelect.append($('<option>', {
            value: (hour < 10 ? '0' : '') + hour + ':00 AM',
            text: (hour < 10 ? '0' : '') + hour + ':00 AM'
        }));
        endTimeSelect.append($('<option>', {
            value: (hour < 10 ? '0' : '') + hour + ':30 AM',
            text: (hour < 10 ? '0' : '') + hour + ':30 AM'
        }));
    }

    for (var hour = 2; hour <= 4; hour++) { // Loop for PM hours
        endTimeSelect.append($('<option>', {
            value: '0' + hour + ':00 PM',
            text: '0' + hour + ':00 PM'
        }));
        endTimeSelect.append($('<option>', {
            value: '0' + hour + ':30 PM',
            text: '0' + hour + ':30 PM'
        }));
    }
});


