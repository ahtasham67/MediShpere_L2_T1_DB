        }

        .screen__content {
            z-index: 1;
            position: relative;
            height: 100%;
            padding: 30px;
        }

        .screen__background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            -webkit-clip-path: inset(0 0 0 0);
            clip-path: inset(0 0 0 0);
        }

        .screen__background__shape {
            transform: rotate(45deg);
            position: absolute;
        }

        .screen__background__shape1 {
            height: 520px;
            width: 520px;
            background: #FFF;
            top: -50px;
            right: 120px;
            border-radius: 0 72px 0 0;
        }

        .screen__background__shape2 {
            height: 220px;
            width: 220px;
            background: #6C63AC;
            top: -172px;
            right: 0;
            border-radius: 32px;
        }

        .screen__background__shape3 {
            height: 540px;
            width: 190px;
            background: linear-gradient(270deg, #5D54A4, #6A679E);
            top: -24px;
            right: 0;
            border-radius: 32px;
        }

        .screen__background__shape4 {
            height: 400px;
            width: 200px;
            background: #7E7BB9;
            top: 420px;
            right: 50px;
            border-radius: 60px;
        }

        .signup {
            width: 320px;
            padding: 30px;
            padding-top: 156px;
        }

        .signup__field {
            padding: 10px 0px;
            position: relative;
        }

        .signup__icon {
            position: absolute;
            top: 30px;
            color: #fff; /* Changed icon color to white */
        }

        .signup__input {
            border: none;
            border-bottom: 2px solid #e2e2e2;
            background: none;
            padding: 10px;
            padding-left: 10px;
            font-weight: 700;
            width: 150%;
            transition: .2s;
            color: #000000; /* Changed text color to white */
            font-size: 20px; /* Changed font size */
        }

        .signup__input:active,
        .signup__input:focus,
        .signup__input:hover {
            outline: none;
            border-bottom-color: #6A679E;
        }

        .signup__submit {
            background: #ffffff;
            font-size: 14px;
            margin-top: 30px;
            padding: 16px 20px;
            border-radius: 26px;
            border: 1px solid #D4D3E8;
            text-transform: uppercase;
            font-weight: 700;
            display: flex;
            align-items: center;
            width: 100%;
            color: #4C489D;
            box-shadow: 0px 2px 2px #5C5696;
            cursor: pointer;
            transition: .2s;
        }

        .signup__submit:active,
        .signup__submit:focus,
        .signup__submit:hover {
            border-color: #6A679E;
            outline: none;
        }

        .button__icon {
            font-size: 24px;
            margin-left: auto;
            color: #7875B5;
        }

        .signup-link {
            text-align: center;
            margin-top: 20px;
            color: #fff;
            font-size: 16px;
        }

        .signup-link a {
            color: #5b13b9;
            font-weight: 700;
            text-decoration: none;
        }

        .title {
            font-size: 55px;
            font-weight: 900;
            color: #fff; /* Changed title color to white */
            text-align: center;
            margin-bottom: -80px;
            padding: -10px;
            padding-left: 260px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            letter-spacing: 2px;
            font-family: 'Raleway', sans-serif;
        }

        /* Your existing styles */

        .signup__input::placeholder {
            color: #535353; /* Set the desired color for the placeholder text */
        }

        /* Add this style to customize the appearance of the date picker */
        .ui-datepicker {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Add this style to customize the appearance of the date picker header */
        .ui-datepicker-header {
            background-color: #24a4d8;
            color: #fff;
            border: none;
        }

        /* Add this style to customize the appearance of the date picker day cells */
        .ui-datepicker-calendar td a {
            color: #000;
        }

        /* Add custom styles for doctor schedule fields */
        .signup__schedule {
            margin-top: 20px;
        }

        .signup__schedule label {
            display: block;
            margin-bottom: 10px;
            color: #fff;
        }

        .signup__schedule select {
            width: 100%;
            padding: 10px;
            border: 2px solid #e2e2e2;
            border-radius: 5px;
            background: none;
            color: #000;
            font-size: 16px;
        }
        .signup__schedule-container {
    display: flex;
}

.signup__schedule {
    flex: 1;
    margin-right: 10px; /* Adjust as needed */
}

.signup__schedule:last-child {
    margin-right: 0;
}

